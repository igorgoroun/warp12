{% extends '@Warp12/Admin/layout.html.twig' %}

{% block layout_header %}
    {{ parent() }}
    {% block layout_styles %}{% endblock %}
{% endblock %}

{% block module_menu %}{% endblock %}
{% block layout_navbar %}{% endblock %}
{% block layout_sidebar %}{% endblock %}


{% block module_content %}
    <div class="row hide-on-small-only">
        <div class="col s12">
            <div class="" style="min-height:100%;height:10em;display: block;"></div>
        </div>
    </div>
    <div class="row">
        <form class="col s12 l8 offset-l2" role="form" action="{{ path('admin_login') }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="section">
                <h5 class="lime-text darken-4">WARPmini Login</h5>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <input id="email" type="email" name="_email" value="{{ last_username }}" class="validate">
                    <label for="email">Email</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="password" type="password" name="_password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
                </div>
            </div>
        </form>
    </div>
{%  endblock %}


{% block layout_footer %}
    {{ parent() }}
{% endblock %}