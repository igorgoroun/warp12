{% block layout_header %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>WARPmini</title>
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="{{ asset('bundles/warp12/css/materialize.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/warp12/css/warp12.css') }}">
{% block layout_styles %}
    <style>
        main, footer {
            padding-left: 300px;
        }

        @media only screen and (max-width : 992px) {
            header, main, footer {
                padding-left: 0;
            }
        }

        nav {
            -webkit-box-shadow: none;
            box-shadow: none;
        }
    </style>
{% endblock %}
<body>
{% endblock %}
<header>
    {% block module_menu %}
        <ul id="module_dropdown" class="dropdown-content">
            {{ render(controller((warp_current_controller ~ '::warpDropdownMenu'), {'request': app.request})) }}
            <!--
            <li><a href="#!"><i class="material-icons left">edit</i>Редактировать контент</a></li>
            <li><a href="#!"><i class="material-icons left">build</i>Изменить настройки</a></li>
            <li class="divider"></li>
            <li><a href="#!"><i class="material-icons left">add</i>Добавить подстраницу</a></li>
            -->
        </ul>
    {% endblock %}
    {% block layout_navbar %}
    <div class="navbar-fixed">
        <nav>
            <div class="nav-wrapper">
                <!--<a href="#!" class="brand-logo white-text show-on-large-only">WARPmini</a>-->
                <a href="#" data-activates="slide-out" class="button-collapse white-text darken-4"><i class="material-icons">menu</i></a>
                <ul class="right">
                    <li><a class="dropdown-button white-text" href="#!" data-activates="module_dropdown"><i class="material-icons right">more</i></a></li>
                </ul>
                <span class="right">
                    {{ render(controller((warp_current_controller ~ '::warpTopLine'), {'request': app.request})) }}
                </span>
            </div>
        </nav>
    </div>
    {% endblock %}
    {%  block layout_sidebar %}
    <ul id="slide-out" class="side-nav fixed">
        <li>
            <div class="user-view blue-grey darken-4 white-text">
                <span style="letter-spacing: 1.5em;" class="lime-text lighten-3">WARPmini</span>
                {% if is_granted('ROLE_ADMIN') %}
                <span class="name">{{ app.user.username }} <a class="blue-grey-text" href="{{ path('admin_logout') }}" title="Sign out"><i class="material-icons right">exit_to_app</i></a></span>
                <span class="email blue-grey-text">{{ app.user.email }}</span>
                {% endif %}
            </div>
        </li>

        {{ render(controller('Warp12Bundle:Default:renderSideBarMenu')) }}

        {% block pages_list %}
            <!--
            <li><a href="#!"><i class="material-icons">subdirectory_arrow_right</i>About</a></li>
            <li><a href="#!"><i class="material-icons">subdirectory_arrow_right</i>Services</a></li>
            <li><div class="divider"></div></li>
            -->
        {% endblock %}
        <!--<li><a class="subheader blue-grey-text"><i class="material-icons">view_module</i>Modules</a></li>-->
        <!--
        <li><a class="" href="#!"><i class="material-icons">view_module</i>Акции</a></li>
        <li><a class="" href="#!"><i class="material-icons">view_module</i>Обратная связь</a></li>
        -->
    </ul>
    {% endblock %}
</header>
<main>
    <div class="container_">
        {% block module_content %}
            <div class="row">
                <div class="col s12">
                    <h4>Services</h4>
                    <p>skj asdjlka jdlksaj dlasj dlkasj dlksaj dlasj dlkas dlkasjl</p>
                </div>
            </div>

            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="input-field col s6">
                            <input placeholder="Placeholder" id="first_name" type="text" class="validate">
                            <label for="first_name blue-grey-text darken-4">First Name</label>
                        </div>
                        <div class="input-field col s6">
                            <input id="last_name" type="text" class="validate">
                            <label for="last_name">Last Name</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input disabled value="I am not editable" id="disabled" type="text" class="validate">
                            <label for="disabled">Disabled</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="password" class="validate">
                            <label for="password">Password</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <textarea id="textarea1" class="materialize-textarea"></textarea>
                            <label for="textarea1">Textarea</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            This is an inline input field:
                            <div class="input-field inline">
                                <input id="email" type="email" class="validate">
                                <label for="email" data-error="wrong" data-success="right">Email</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        {% endblock %}
    </div>
</main>

{% block layout_footer %}
<!--Import jQuery before materialize.js-->
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<!-- Compiled and minified JavaScript -->
<script src="{{ asset('bundles/warp12/js/materialize.min.js') }}"></script></head>
<script>
    $(function(){
        $(".button-collapse").sideNav();
        $('.dropdown-button').dropdown({
                constrainWidth: false // Does not change width of dropdown to that of the activator
            }
        );
    });
</script>
</body>
</html>
{% endblock %}