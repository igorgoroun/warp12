{% extends '@Warp12/Admin/layout.html.twig' %}

{% block layout_header %}
    {{ parent() }}
{% endblock %}
{% block layout_styles %}
{{ parent() }}
{% endblock %}

{% block module_menu %}
    {{ parent() }}
{% endblock %}
{% block layout_navbar %}
    {{ parent() }}
{% endblock %}
{% block layout_sidebar %}
    {{ parent() }}
{% endblock %}


{% block module_content %}
    <div class="row hide-on-small-only">
        <div class="col s12">
            <div class="" style="min-height:100%;height:10em;display: block;"></div>
        </div>
    </div>
    <div class="row">
        <form class="col s12 l8 offset-l2">
            <div class="section">
                <h5 class="lime-text darken-4">WARPmini Login</h5>
            </div>
            <div class="row">
                <div class="input-field col s12 m6">
                    <input id="email" type="email" class="validate">
                    <label for="email">Email</label>
                </div>
                <div class="input-field col s12 m6">
                    <input id="password" type="password" class="validate">
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
                </div>
            </div>
        </form>
    </div>
{%  endblock %}


{% block layout_footer %}
    {{ parent() }}
{% endblock %}